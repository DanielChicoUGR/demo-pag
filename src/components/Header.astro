---

interface HeaderContainerProps {
  imagePath: string;
}

const { imagePath } = Astro.props as HeaderContainerProps;




// const background_image= `url(${imagePath}}`
// console.log(background_image)
---

<section class="header-container" style=`background-image: url(${imagePath});`>
  <div class="background-image"/>
  <div class="header-text">
    <slot name="top" />
    {/* Aquí se pasa el contenido del slot */}
  </div>
</section>

<style>
  .header-container {
    position: relative;
    width: 100%;
    height: fit-content; /* Ajusta esto según tus necesidades */
    display: flex; /* Habilita Flexbox */
    justify-content: center; /* Centra horizontalmente */
    align-items: center; /* Centra verticalmente */
    /* background-image: var(--background_image); */
    
    background-size: cover;
    background-position: center;
    padding-top: 10em;
    padding-bottom: 10em;
  }
  
  .background-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(14, 15, 15, 0.5);
  }
  
  
  .header-text{
    max-width: 920px;
    -webkit-text-size-adjust: 100%;
    -webkit-font-smoothing: antialiased;
    line-height: 1.85714285714286;
    font-family: 'Open Sans',sans-serif;
    font-weight: 400;
    font-size: 1rem;
    word-wrap: break-word;

    box-sizing: border-box;
    position: relative;
    width: 100%;
    flex-wrap: wrap;
    display: flex;
    align-content: center;
    align-items: center;
}
</style>


