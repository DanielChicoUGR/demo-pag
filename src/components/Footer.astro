    margin-bottom: 1em;
    font-size: small;
  }

  .column {
    margin-top: 1em;
    flex: 1;
  }

  .logos {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  

  h3 {
    font-size: large;
  }

  @media (max-width: 1024px) {
    footer {
      flex-direction: column;
      align-items: left;
    }
