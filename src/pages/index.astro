<style>
  .social-icon-grid {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 25px;
  }

  .social-icon {
    border-radius: 10%;
    fill: white;
    display: inline-block;
    padding: 10px; /* Espacio alrededor del icono */
  }

  .twitter {
    background-color: blue; /* Fondo azul para Twitter */
  }

  .instagram {
    background-color: rgb(0, 0, 0); /* Fondo rosa para Instagram */
  }

  .grid2 {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    max-width: 1000px; /* El grid no se expandirá más allá de 2500px */
    margin: 0 auto; /* Centra el grid horizontalmente */
  }

  @media (max-width: 900px) {
    .grid2 {
      grid-template-columns: 1fr; /* En pantallas pequeñas, las tarjetas se apilan verticalmente */
    }
  }
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    padding: 20px;
    align-items: start;
    grid-auto-flow: dense;
    margin: auto;
  }

  .margin {
    margin-inline:;
  }
  @media (min-width: 600px) {
    .grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 900px) {
    .grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
